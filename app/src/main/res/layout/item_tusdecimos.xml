<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivbombo1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/bombo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvdecimo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="00000"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/ivbombo1"
        app:layout_constraintEnd_toStartOf="@id/ivbombo2"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvparticipacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Juego: 20â‚¬"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/ivbombo1"
        app:layout_constraintEnd_toStartOf="@id/ivbombo2"
        app:layout_constraintTop_toBottomOf="@id/tvdecimo"/>

    <ImageView
        android:id="@+id/btndelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toBottomOf="@id/tvparticipacion"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivbombo2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/bombo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>